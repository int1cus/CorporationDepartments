<Application x:Class="CorporationDepartments.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:CorporationDepartments.UI">
    <Application.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <!-- Цвета и кисти должны быть первыми -->
                <ResourceDictionary Source="/Resources/Colors.xaml"/>

                <!-- Базовые стили и шаблоны -->
                <ResourceDictionary Source="/Resources/Styles/Common.xaml"/>

                <!-- Стили компонентов, которые могут зависеть от базовых стилей -->
                <ResourceDictionary Source="/Resources/Styles/Buttons.xaml"/>
                <ResourceDictionary Source="/Resources/Styles/TextBlocks.xaml"/>
                <ResourceDictionary Source="/Resources/Styles/TextBoxes.xaml"/>

                <!-- Конвертеры можно загружать последними, так как они не зависят от стилей -->
                <ResourceDictionary Source="/Resources/Converters.xaml"/>

            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </Application.Resources>
</Application>
