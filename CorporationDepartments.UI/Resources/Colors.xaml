<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Base Colors -->
    <Color x:Key="PrimaryColor">#1976D2</Color>
    <Color x:Key="PrimaryLightColor">#42A5F5</Color>
    <Color x:Key="PrimaryDarkColor">#1565C0</Color>

    <Color x:Key="SecondaryColor">#757575</Color>
    <Color x:Key="SecondaryLightColor">#9E9E9E</Color>
    <Color x:Key="SecondaryDarkColor">#616161</Color>

    <Color x:Key="DangerColor">#D32F2F</Color>
    <Color x:Key="DangerLightColor">#EF5350</Color>
    <Color x:Key="DangerDarkColor">#C62828</Color>

    <Color x:Key="BackgroundColor">#FFFFFF</Color>
    <Color x:Key="SurfaceColor">#F5F5F5</Color>
    <Color x:Key="ErrorColor">#D32F2F</Color>

    <!-- Text Colors -->
    <Color x:Key="PrimaryTextColor">#212121</Color>
    <Color x:Key="SecondaryTextColor">#757575</Color>
    <Color x:Key="DisabledTextColor">#9E9E9E</Color>

    <!-- Border Colors -->
    <Color x:Key="BorderColor">#E0E0E0</Color>
    <Color x:Key="DividerColor">#EEEEEE</Color>

    <!-- State Colors -->
    <Color x:Key="HoverColor">#F5F5F5</Color>
    <Color x:Key="SelectedColor">#E3F2FD</Color>
    <Color x:Key="DisabledColor">#BDBDBD</Color>

    <!-- Brushes -->
    <!-- Primary -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="{StaticResource PrimaryLightColor}"/>
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{StaticResource PrimaryDarkColor}"/>
    <SolidColorBrush x:Key="PrimaryHoverBrush" Color="{StaticResource PrimaryLightColor}"/>
    <SolidColorBrush x:Key="PrimaryPressedBrush" Color="{StaticResource PrimaryDarkColor}"/>

    <!-- Secondary -->
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}"/>
    <SolidColorBrush x:Key="SecondaryLightBrush" Color="{StaticResource SecondaryLightColor}"/>
    <SolidColorBrush x:Key="SecondaryDarkBrush" Color="{StaticResource SecondaryDarkColor}"/>
    <SolidColorBrush x:Key="SecondaryHoverBrush" Color="{StaticResource SecondaryLightColor}"/>
    <SolidColorBrush x:Key="SecondaryPressedBrush" Color="{StaticResource SecondaryDarkColor}"/>

    <!-- Danger -->
    <SolidColorBrush x:Key="DangerBrush" Color="{StaticResource DangerColor}"/>
    <SolidColorBrush x:Key="DangerLightBrush" Color="{StaticResource DangerLightColor}"/>
    <SolidColorBrush x:Key="DangerDarkBrush" Color="{StaticResource DangerDarkColor}"/>
    <SolidColorBrush x:Key="DangerHoverBrush" Color="{StaticResource DangerLightColor}"/>
    <SolidColorBrush x:Key="DangerPressedBrush" Color="{StaticResource DangerDarkColor}"/>

    <!-- Background -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="{StaticResource SurfaceColor}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}"/>

    <!-- Text -->
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="{StaticResource PrimaryTextColor}"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="{StaticResource SecondaryTextColor}"/>
    <SolidColorBrush x:Key="TertiaryTextBrush" Color="{StaticResource DisabledTextColor}"/>
    <SolidColorBrush x:Key="DisabledTextBrush" Color="{StaticResource DisabledTextColor}"/>

    <!-- Input -->
    <SolidColorBrush x:Key="InputBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="InputBorderBrush" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="InputHoverBorderBrush" Color="#BDBDBD"/>
    <SolidColorBrush x:Key="InputFocusBorderBrush" Color="{StaticResource PrimaryColor}"/>

    <!-- Border and Divider -->
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="DividerBrush" Color="{StaticResource DividerColor}"/>
    <SolidColorBrush x:Key="CardBorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="SeparatorBrush" Color="{StaticResource DividerColor}"/>

    <!-- List Items -->
    <SolidColorBrush x:Key="ListItemHoverBrush" Color="{StaticResource HoverColor}"/>
    <SolidColorBrush x:Key="ListItemSelectedBrush" Color="{StaticResource SelectedColor}"/>

    <!-- ScrollBar -->
    <SolidColorBrush x:Key="ScrollBarThumbBrush" Color="{StaticResource SecondaryTextColor}" Opacity="0.3"/>

    <!-- Disabled -->
    <SolidColorBrush x:Key="DisabledBrush" Color="{StaticResource DisabledColor}"/>
    <SolidColorBrush x:Key="DisabledBackgroundBrush" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="DisabledBorderBrush" Color="#E0E0E0"/>

    <!-- Error -->
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}"/>

</ResourceDictionary>